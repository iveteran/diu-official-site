//- Application scenario
mixin application_scenario(title, contents, cover, cover_position)
  .card.mb-5.mb-xl-5
      .card-body.p-5
          .middle.text-uppercase.fw-bold.text-muted.text-center #{title}
          .row.mt-4
              case cover_position
                  when "left"
                      .col-md-8
                          img.rounded.float-right(src=cover, width="100%", height="400")
                      .col-md-4
                          ul.list-group.list-group-flush
                              each content in contents
                                 li.list-group-item
                                     .text.lh-lg #{content}
                  when "right"
                      .col-md-4
                          ul.list-group.list-group-flush
                              each content in contents
                                 li.list-group-item
                                     .text.lh-lg #{content}
                      .col-md-8
                          img.rounded.float-right(src=cover, width="100%", height="400")
                  when "top"
                    div
                      img.rounded.float-right(src=cover, width="100%", height="600")
                      ul.list-group.list-group-flush
                          each content in contents
                             li.list-group-item
                                 .text.lh-lg #{content}
                  when "bottom"
                    div
                      ul.list-group.list-group-flush
                          each content in contents
                             li.list-group-item
                                 .text.lh-lg #{content}
                      img.rounded.float-right(src=cover, width="100%", height="600")
