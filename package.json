{
    "title": "A simple site template",
    "name": "simple-site",
    "version": "1.0.0",
    "scripts": {
        "build": "npm run clean && npm run build:pug && npm run build:scss && npm run build:scripts && npm run build:assets",
        "build:assets": "node scripts/build-assets.js",
        "build:pug": "node scripts/build-pug.js",
        "build:scripts": "node scripts/build-scripts.js",
        "build:scss": "node scripts/build-scss.js",
        "clean": "node scripts/clean.js",
        "start": "npm run build && node scripts/start.js",
        "start:debug": "npm run build && node scripts/start-debug.js"
    },
    "description": "A simple site template witten in Javascript with PUG and Bootstrap",
    "keywords": [
    ],
    "homepage": "https://matrixworks.cn/",
    "author": "yu@matrix.works",
    "contributors": [
        "Matrixworks (https://matrix.works/)"
    ],
    "dependencies": {
        "bootstrap": "5.3.2"
    },
    "devDependencies": {
        "autoprefixer": "10.3.7",
        "browser-sync": "^3.0.2",
        "chokidar": "3.5.2",
        "concurrently": "6.3.0",
        "postcss": "^8.4.38",
        "prettier": "2.4.1",
        "pug": "3.0.2",
        "sass": "1.43.2",
        "shelljs": "^0.8.5",
        "upath": "2.0.1"
    }
}
